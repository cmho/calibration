.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:characters, :index)
      %li=link_to pat(:new), url(:characters, :new)
      %li.active=link_to pat(:edit), url(:characters, :edit, :id => @character.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:character)
    .inner
      -form_for :character, url(:characters, :update, :id => @character.id), :method => :put, :class => :form do |f|
        =partial "characters/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
